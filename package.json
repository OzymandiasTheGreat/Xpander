{
  "name": "xpander",
  "version": "3.0.0rc0",
  "description": "Text expander for Windows and Linux.",
  "author": "Tomas Ravinskas",
  "license": "MIT",
  "main": "src/xpander.js",
  "scripts": {
    "tsc": "tsc",
    "sass": "node-sass --importer=node_modules/node-sass-tilde-importer src/static/styles/ -o src/static/styles",
    "clean": "git clean -dxff",
    "build_py": "shiv -c xpander.py -o build/xpander.pyz .",
    "build":" yarn sass && yarn tsc",
    "start": "yarn build && electron --disable-gpu .",
    "dist": "yarn build && electron-builder -l AppImage"
  },
  "build": {
    "appId": "tk.ozymandias.xpander",
    "linux": {
      "category": "Utility"
    },
    "files": [
      "!.vscode",
      "!.venv",
      "!src/**/*.sass",
      "!src/**/*.ts",
      "!src/xpander.py",
      "!src/xpander_data",
      "!src/xpander_py",
      "!**/xpander.egg-info",
      "!cloc.md",
      "!**/*requirements.txt",
      "!poetry.lock",
      "!pyproject.toml",
      "!setup.py",
      "!tsconfig.json",
      "!yarn.lock"
    ],
    "extraResources": [{ "from": "build/xpander.pyz", "to": "xpander.pyz" }]
  },
  "dependencies": {
    "ini": "^1.3.5",
    "jqtree": "^1.4.12",
    "jquery": "^3.4.1",
    "material-design-icons-iconfont": "^5.0.1",
    "materialize-css": "^1.0.0-rc.2",
    "python-shell": "^1.0.8",
    "readdirp": "^3.3.0",
    "rimraf": "^3.0.1",
    "simditor": "2.3.22",
    "xdg-app-paths": "^5.2.0"
  },
  "devDependencies": {
    "@types/ini": "^1.3.30",
    "@types/jquery": "^3.3.31",
    "@types/materialize-css": "^1.0.7",
    "electron": "^7.1.9",
    "electron-builder": "^22.3.2",
    "node-sass": "^4.13.1",
    "node-sass-tilde-importer": "^1.0.2",
    "typescript": "^3.7.5"
  }
}
